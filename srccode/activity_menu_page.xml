<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:rotation="0"
    android:rotationX="0"
    tools:context=".Page4">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"></LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/top_bg">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="152dp"
                    android:layout_height="96dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="?android:attr/fingerprintAuthDrawable" />

                <TextView
                    android:id="@+id/Custid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:text="CustomerID"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="@+id/imageView"
                    app:layout_constraintStart_toStartOf="@+id/imageView"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:id="@+id/MTotalA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:padding="5dp"
                    android:text="Total Price : NA"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="@+id/Custid"
                    app:layout_constraintStart_toStartOf="@+id/Custid"
                    app:layout_constraintTop_toBottomOf="@+id/Custid" />

                <TextView
                    android:id="@+id/MTotalP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:padding="5dp"
                    android:text="Total item : NA"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="@+id/MTotalA"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/MTotalA"
                    app:layout_constraintTop_toBottomOf="@+id/MTotalA" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_vertical">

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/gifImageView1"
                        android:layout_width="170dp"
                        android:layout_margin="10dp"
                        android:layout_height="150dp"
                        android:shadowColor="#422F65"
                        android:background="@drawable/ripple_effect"
                        android:src="@drawable/trolley"
                        />

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/gifImageView2"
                        android:layout_width="170dp"
                        android:layout_margin="10dp"
                        android:layout_height="150dp"
                        android:background="@drawable/ripple_effect"
                        android:src="@drawable/trolley" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-20dp"
                    android:layout_gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Your Purchases"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="170dp"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:text="List of All Items "
                        android:textSize="20dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="30dp">
                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/gifImageView3"
                        android:layout_width="170dp"
                        android:layout_margin="10dp"
                        android:shadowColor="#14C81B"
                        android:layout_height="150dp"
                        android:background="@drawable/ripple_effect"
                        android:src="@drawable/scan"/>

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/gifImageView4"
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/ripple_effect"
                        android:shadowColor="#14C81B"
                        android:src="@drawable/order" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="-20dp"
                    android:paddingTop="0dp">
                    <TextView
                        android:layout_width="180dp"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Scan | ADD"
                        android:gravity="center"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:layout_width="170dp"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:gravity="center"
                        android:text="ADD by Search"
                        android:textSize="20dp"
                        />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>